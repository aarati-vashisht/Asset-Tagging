<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/background_DarkBlue"></solid>
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/background_lightBlue"></solid>
            <stroke android:color="@color/background_DarkBlue"
                android:width="1dp"></stroke><corners android:radius="3dp" />
        </shape>
    </item>
</selector>